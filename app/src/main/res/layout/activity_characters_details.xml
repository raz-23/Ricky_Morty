<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/img_char"
    android:paddingTop="10dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CharactersDetailsActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Characters Details"
        android:paddingVertical="10dp"
        android:textSize="20sp"
        android:id="@+id/text_char_name"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:textAllCaps="true"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/img_char"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image"
        app:layout_constraintTop_toBottomOf="@id/text_char_name"
        app:layout_constraintStart_toStartOf="parent"/>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/img_char"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            >
            <LinearLayout
                android:id="@+id/layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/noti_icon_1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_notification"
                            app:tint="@color/blue"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dead"
                            android:id="@+id/char_status"
                            android:textSize="16sp"
                            app:layout_constraintTop_toTopOf="@id/noti_icon_1"
                            app:layout_constraintStart_toEndOf="@id/noti_icon_1"
                            app:layout_constraintBottom_toBottomOf="@id/noti_icon_1"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:layout_marginTop="12dp"
                            android:textColor="@color/blue"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:padding="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textAlignment="center"
                            android:background="@color/light_gray"
                            app:layout_constraintTop_toBottomOf="@id/noti_icon_1"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/noti_icon_2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_notification"
                            app:tint="@color/red"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:id="@+id/char_gender"
                            android:textSize="16sp"
                            app:layout_constraintTop_toTopOf="@id/noti_icon_2"
                            app:layout_constraintStart_toEndOf="@id/noti_icon_2"
                            app:layout_constraintBottom_toBottomOf="@id/noti_icon_2"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:layout_marginTop="12dp"
                            android:textColor="@color/red"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:padding="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textAlignment="center"
                            android:background="@color/light_gray"
                            app:layout_constraintTop_toBottomOf="@id/noti_icon_2"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/noti_icon_3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_notification"
                            app:tint="@color/purple"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="None"
                            android:id="@+id/char_type"
                            android:textSize="16sp"
                            app:layout_constraintTop_toTopOf="@id/noti_icon_3"
                            app:layout_constraintStart_toEndOf="@id/noti_icon_3"
                            app:layout_constraintBottom_toBottomOf="@id/noti_icon_3"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:layout_marginTop="12dp"
                            android:textColor="@color/purple"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:padding="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textAlignment="center"
                            android:background="@color/light_gray"
                            app:layout_constraintTop_toBottomOf="@id/noti_icon_3"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/noti_icon_4"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_notification"
                            app:tint="@color/green"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Human"
                            android:id="@+id/char_spcies"
                            android:textSize="16sp"
                            app:layout_constraintTop_toTopOf="@id/noti_icon_4"
                            app:layout_constraintStart_toEndOf="@id/noti_icon_4"
                            app:layout_constraintBottom_toBottomOf="@id/noti_icon_4"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Species"
                            android:layout_marginTop="12dp"
                            android:textColor="@color/green"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:padding="10dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textAlignment="center"
                            android:background="@color/light_gray"
                            app:layout_constraintTop_toBottomOf="@id/noti_icon_4"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_gray"
                android:textAllCaps="true"
                android:layout_marginHorizontal="10dp"
                android:text="Loading"
                android:textAlignment="center"
                android:id="@+id/add_to_fav"
                />


        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>